<section id="data">
    <h2>Perspectives</h2>
    <form blklab-submit="save" id="form">

        <div class="row">
            <h3>Title</h3>
            <input type="text" name="title" style="background:#e6e6e6; border:none; border-radius:0; width:50%;" value="{{title}}">
        </div>

        <div class="row">
            <h3>Sub Title</h3>
            <input type="text" name="sub_title" style="background:#e6e6e6; border:none; border-radius:0; width:50%;" value="{{sub_title}}">
        </div>

        <div class="row">
            <h3>Author</h3>
            <input type="text" name="author" style="background:#e6e6e6; border:none; border-radius:0; width:50%;" value="{{author}}">
        </div>


        <section id="filters">
            <div class="col">
                <h3>SELECT INDUSTRY SEGMENT</h3>
                <select blklab-change="changeSegment" name="segment" id="segment-list">
                    <option>All</option>
                    {{#each segments}}
                        <option value="{{id}}">{{segment}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="col">
                <h3>SELECT RESULTS</h3>
                <select blklab-change="changeScreen" name="screen" id="screen-list">
                    <option>All</option>
                    {{#each screens}}
                        <option value="{{id}}">{{Screen_description}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="col">
                <h3>SELECT COMPANY</h3>
                <select blklab-change="changeCompany" name="company" id="company-list">
                    <option>All</option>
                    {{#each companies}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </section>

        <div class="clear"></div>

        <div class="row">
            <h3>Title Image</h3>
            <input type="file" style="background:#e6e6e6; border:none; border-radius:0; width:50%;" blklab-change="loadFiles">
            <input type="hidden" name="title_image" id="title_image" value="{{title_image}}">
        </div>

        <div class="row">
            <h3>Text</h3>
            <div class="editor" id="editor" style="background:#e6e6e6; height:400px; overflow: auto; padding:5px;" blklab-change="updateForm">{{{content}}}</div>
            <input type="hidden" id="text-content" name="content">
        </div>

        <div class="row">
            <input type="hidden" name="id" value="{{id}}">
            <input type="submit" value="Save">
        </div>

    </form>

</section>

