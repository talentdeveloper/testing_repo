<section id="main" class="individual">
    <section id="filters">
        <div class="col">
            <h3>SELECT BANK <img src="/app/assets/images/premium-icon-red.png"></h3>
            <select blklab-change="changeCompany" id="company-list">
                {{#each companies}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="col">
        </div>

        <div class="colhidden">
            <h2><img src="/app/assets/images/premium-icon-red.png"> SAVE/LOAD SIMULATION</h2>
        </div>
    </section>

    <section id="data" class="sim">
        <div class="block full auto">
            <header>SIMULATED OUTCOMES</header>
            <section class="detail"  id="outcomes">
                <div class="col">
                    <label>Total Returns: </label> <span>0% (0%) <img src="/app/assets/images/outcome-arrow.png"> 0% (0%) <img src="/app/assets/images/outcome-graph.png"></span>
                </div>
            </section>
        </div>

        <div class="block full auto">
            <header>ASSUMPTION DRIVERS</header>
            <section class="detail" id="drivers">
                <div class="col">
                    <label>Efficiency Ratio  Scenario</label>
                    <input type="range" id="er-slider" blklab-change="updateER" class="reverse" />
                    <div id="er-years" class="buttons">

                    </div>
                </div>

                <div class="col">
                    <label>Loan Loss Ratio Scenario</label>
                    <input type="range" id="llr-slider" blklab-change="updateLLR" class="reverse" />
                    <div id="llr-years" class="buttons">

                    </div>
                </div>

                <div class="col">
                    <label>Asset Yield Scenario</label>
                    <input type="range" id="ay-slider" blklab-change="updateAY" />
                    <div id="ay-years" class="buttons">

                    </div>
                </div>

                <div class="col">
                    <label>Leverage Scenario</label>
                    <input type="range" id="lev-slider" blklab-change="updateLev" />
                    <div id="lev-years" class="buttons">

                    </div>
                </div>

            </section>
        </div>

        <div class="block full auto">
            <header>SIMULATION DETAILS</header>
            <section class="detail" id="simulation-detail">
